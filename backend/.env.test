# Configuration Backend - AgriSmart CI - Tests (hors Docker)
NODE_ENV=test

# ==========================================
# DATABASE - MySQL + Prisma (localhost pour tests hors Docker)
# ==========================================
DATABASE_URL="mysql://agrismart:param_db_password@localhost:3306/agrismart_ci"

# MySQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=agrismart_ci
DB_USER=agrismart
DB_PASSWORD=param_db_password

# Redis (localhost pour tests hors Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password

# JWT
JWT_SECRET=test_secret_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=test_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# OTP
OTP_EXPIRES_IN=600000
OTP_MAX_ATTEMPTS=3

# Twilio (Mock en test)
TWILIO_ACCOUNT_SID=AC_mock_account_sid
TWILIO_AUTH_TOKEN=mock_auth_token
TWILIO_PHONE_NUMBER=+15005550006

# Email (Mock en test)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@agrismart.ci
EMAIL_PASSWORD=mock_password
EMAIL_FROM=AgriSmart CI <noreply@agrismart.ci>

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Rate Limiting (plus permissif pour les tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000
