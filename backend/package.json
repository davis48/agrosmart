{
  "name": "agrismart-ci-backend",
  "version": "1.0.0",
  "description": "Backend du système agricole intelligent pour la Côte d'Ivoire - IoT & IA",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:migrate": "npx prisma migrate deploy",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:seed": "node scripts/seed.js",
    "seed": "npm run db:seed",
    "db:reset": "npx prisma migrate reset --force",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "test": "DOTENV_CONFIG_PATH=.env.test jest --coverage",
    "test:watch": "DOTENV_CONFIG_PATH=.env.test jest --watch",
    "test:docker": "docker compose exec api npm test",
    "test:security": "node scripts/security-audit.js",
    "audit:security": "node scripts/npm-audit.js",
    "audit:deps": "npm audit --audit-level=moderate",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:dev": "docker compose --profile dev up -d",
    "docker:prod": "docker compose --profile production up -d",
    "docker:down": "docker compose down"
  },
  "keywords": [
    "agriculture",
    "iot",
    "ia",
    "cote-divoire",
    "smart-farming",
    "sensors"
  ],
  "author": "AgriSmart CI Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.66.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^4.4.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.8.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.3",
    "mariadb": "^3.4.5",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.16.0",
    "nodemailer": "^7.0.11",
    "rate-limit-redis": "^4.3.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.19.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.22.0",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.1.4",
    "typescript-eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
